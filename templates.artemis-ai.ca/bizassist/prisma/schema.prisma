generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Business user or staff
model User {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String?
  role        String   // e.g., "admin", "staff"
  tenant_id   String   // Added
  password_hash String // Added
  createdAt   DateTime @default(now())
  conversations Conversation[]
  messages     Message[]
}

// Sales record for KPI
model Sale {
  id        String   @id @default(uuid())
  tenantId  String   // Renamed from tenant_id to match original schema if this was a typo, or keep if intentional
  amount    Float
  product_id String  // Added
  channel    String  // Added
  date      DateTime @default(now())
}

// Automated tasks / reminders
model Task {
  id         String   @id @default(uuid())
  tenantId   String
  title      String
  dueAt      DateTime
  completed  Boolean  @default(false)
}

// Chat conversation
model Conversation {
  id          String   @id @default(uuid())
  tenantId    String
  userId      String
  createdAt   DateTime @default(now())
  messages    Message[]
  User        User     @relation(fields: [userId], references: [id])
}

// Individual chat messages
model Message {
  id             String    @id @default(uuid())
  conversationId String
  role           String    // "user" or "assistant"
  content        String
  tokens         Int?      // Added
  createdAt      DateTime  @default(now())
  userId         String?   // Optional: if messages can exist without a user
  User           User?     @relation(fields: [userId], references: [id])
  Conversation   Conversation @relation(fields: [conversationId], references: [id])
}